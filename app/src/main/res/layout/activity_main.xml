<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
     android:layout_height="match_parent"
    tools:context="com.example.falcon.matchedit.MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimaryDark"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" >

        <TextView
            android:id="@+id/go_next"
             android:textColor="#ffffff"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_25sdp"
             android:textSize="@dimen/_20sdp"
            android:text="Match it"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
        <ImageView
            android:src="@drawable/ic_launcher_round"
             android:id="@+id/answer_one"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
        <ImageView
            android:src="@drawable/ic_launcher_round"
              android:id="@+id/answer_two"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
        <ImageView
            android:src="@drawable/ic_launcher_round"
             android:id="@+id/answer_three"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
        <ImageView
            android:src="@drawable/ic_launcher_round"
             android:id="@+id/answer_four"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
        <com.example.falcon.matchedit.Typewriter

          android:layout_gravity="center"
            android:id="@+id/nameOfDrage"
             android:textSize="@dimen/_30sdp"
            android:textColor="@color/colorAccent"
            android:gravity="center"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
        <ImageView
            android:src="@drawable/ic_launcher_round"
            android:id="@+id/chose_one"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
        <ImageView
            android:src="@drawable/ic_launcher_round"
            android:id="@+id/chose_two"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
        <ImageView
            android:src="@drawable/ic_launcher_round"
            android:id="@+id/chose_three"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
        <ImageView
            android:src="@drawable/ic_launcher_round"
            android:id="@+id/chose_four"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
    </LinearLayout>

</LinearLayout>
