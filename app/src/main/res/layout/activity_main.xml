<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:layout_height="match_parent"
    tools:context="com.example.falcon.matchedit.MainActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
        <ImageView
            android:src="@drawable/ic_launcher_round"
             android:id="@+id/answer_one"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
        <ImageView
            android:src="@drawable/ic_launcher_round"
              android:id="@+id/answer_two"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
        <ImageView
            android:src="@drawable/ic_launcher_round"
             android:id="@+id/answer_three"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
        <ImageView
            android:src="@drawable/ic_launcher_round"
             android:id="@+id/answer_four"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
        <TextView

            android:text="here"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
        <ImageView
            android:src="@drawable/one"
            android:id="@+id/chose_one"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
        <ImageView
            android:src="@drawable/ic_launcher_round"
            android:id="@+id/chose_two"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
        <ImageView
            android:src="@drawable/ic_launcher_round"
            android:id="@+id/chose_three"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
        <ImageView
            android:src="@drawable/ic_launcher_round"
            android:id="@+id/chose_four"
            android:textAllCaps="false"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp" />
    </LinearLayout>

</LinearLayout>
